<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" href="/register">Register Account</a>
      </div>
    </div>
    <% if (!user) { %>
      <form action="/login" method="POST">
        <div class="navbar-nav">
          <input type="email" name="email" placeholder="Email" style="width: 150px; margin: 1em"> 
          <button type="submit" class="btn btn-primary" style="margin: 1em">Login</button>
        </div>
      </form>
      <% } else { %>
    <form action="/logout" method="POST">
      <div class="navbar-nav">
        <a class="nav-item nav-link" style="margin: 1em">Logged In As: <%= user.email %></a>
          <button type="submit" class="btn btn-primary" style="margin: 1em">Logout</button>
        </div>
      </form>
      <% } %>
  </nav>
</header>